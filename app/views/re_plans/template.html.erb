  <%= re_build_form_data("DATA SPAN 7",          {:span => "7", :class => "showgrid clear"})%>
  <%= re_build_form_data("DATA SPAN 6",          {:span => "6", :class => "showgrid clear"})%>
  <%= re_build_form_data("DATA SPAN 5",          {:span => "5", :class => "showgrid clear"})%>
