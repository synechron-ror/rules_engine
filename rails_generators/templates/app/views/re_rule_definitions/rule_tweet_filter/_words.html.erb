<% position = 0 %>
<% (@re_rule.rule.words || []).each do | word | %>  
  <% f.fields_for :rule_data, {:first => false} do |frd| %>
    <%= render '/re_rule_definitions/rule_tweet_filter/word', :f => frd, :position => position, :word => word %>
    <% position += 1 %>        
  <% end %>
<% end %>  
<% if position == 0 %>
  <% f.fields_for :rule_data, {:first => false} do |frd| %>
    <%= render '/re_rule_definitions/rule_tweet_filter/word', :f => frd, :position => position %>      
  <% end %>
<% end %>

<div id="new_position_tweet_filter"></div>
<%= re_form_text "", re_add_link('Add another word to filter', 'tweet_filter') %>    

