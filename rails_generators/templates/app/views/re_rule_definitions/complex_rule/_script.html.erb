<% javascript_tag do %>
  var new_complex = '<%=escape_javascript(render("/re_rule_definitions/complex_rule/word"))%>'  
  
  var updateWorkflowAction = function() {
    if ($('#complex_workflow_action').attr('value') == "start_workflow")
    {
      $('#complex_workflow').re_form_enable();
      $('#complex_workflow').removeAttr("disabled");      
    } else {
      $('#complex_workflow').re_form_disable();
      $('#complex_workflow').attr("disabled", true); 
    }      
  }

  $(document).ready(function() {	
    $('#rule_title').focus();	
    $("#complex_workflow").autocomplete('/re_workflows/lookup?t=code', { multiple: false });
    
    $('#complex_workflow_action').change(function() {
      updateWorkflowAction();
    });    
    
    updateWorkflowAction();
  });

<% end %>
