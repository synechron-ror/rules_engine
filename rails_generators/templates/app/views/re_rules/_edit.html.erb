<div class="clear prepend-1 span-18">
  <h2 class="re-rule-edit"> Edit <%= @re_rule.rule.options[:display_name] %></h2>
  <div class="clear top-10"></div>

  <% re_form_for(@re_rule, :url => re_pipeline_re_rule_path(@re_pipeline, @re_rule), :method => :post, :span => "3x13", :html => {:id => "re_rule_edit_form"}) do |f| %>
    <%= f.error_messages :message => "Unable To Update Rule : #{@re_rule.rule.options[:display_name]}" %>
    <% re_whitebox do %>    
      <%= render(@re_rule.rule.options[:edit_partial], :f => f) %>
      
      <div class="clear"></div>
  	  <%= re_button_submit_green('Update', :id => "re_rule_edit_update") %>
  	  <%= re_button_link_orange('Cancel', change_re_pipeline_path(@re_pipeline), :id => "re_rule_edit_cancel") %>
    <% end %>
  <% end %>
</div>  
<div class="clear"></div>