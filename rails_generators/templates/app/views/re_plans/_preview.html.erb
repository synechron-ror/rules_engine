<div class="span-17">
	<div class="span-1">
		<div class="re-xtra-plan-title-single"><span>Plans</span></div>
	</div>	
	<div class="span-16 last">
 		<%= render '/re_plans/show' %>

		<% @re_plan.re_workflows.each_with_index do |re_workflow, workflow_index | %>
			<div class="span-2 pull-1">
				<% if workflow_index == 0 %>
			 		<div class="re-xtra-workflow-title-single"><span>Workflow</span></div>
				<% else %>
					&nbsp;
				<% end %>
			</div>
			<div class="span-15 last">
				<div class="re-infobox <%= @re_plan.re_workflows[0] == re_workflow ?  'no-top' : '' %>">    
		  		<%= render '/re_plans/workflow_preview', :re_workflow => re_workflow  %>    
					<div class="clear"></div>
				</div>
			
				<div class="span-2 pull-1">
					<% if workflow_index == 0 %>
				 		<div class="re-xtra-rule-title-plural"><span>Rules</span></div>
					<% else %>
						&nbsp;
					<% end %>
				</div>	
				<div class="span-14 last">
				  <div class="re-infobox no-top">    
						<%= render '/re_workflows/rule_empty', :hide => !re_workflow.re_rules.empty? %>

				    <% re_workflow.re_rules.each_with_index do |re_rule, rule_index | %>
				      <%= render '/re_workflows/rule_preview', :re_rule => re_rule,
																										:new_row => (rule_index != 0 && (rule_index % 2) == 0), 
																										:last_rule => re_rule == re_workflow.re_rules[-1] %>
				    <% end %>
						<div class="clear"></div>
				  </div>  
				</div>
			<% end %>	
		</div>	
	</div>
	<div class="clear"></div>
	<%= re_button_link_orange('Close', re_plans_path, :id => "re_plan_preview_close") %>
	<div class="clear top-10"></div>
</div>  
