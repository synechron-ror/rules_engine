<% set_re_javascript_include ['re_job_index', 're_pipeline_show_jobs'] %>
<% set_re_breadcrumbs link_to("All Pipelines", re_pipelines_path, :class => "re-pipeline-list"), '<span class="re-pipeline-show">View Pipeline</span>' %>

<div class="prepend-1 span-16 border">      
  <%= render :partial => 'show' %>    
	<hr/>
  <div class="re-infobox">    
    <div class="clear top-5"></div>
    <% @re_pipeline.re_rules.each do |re_rule | %>
      <%= render '/re_pipeline_rules/show', :re_rule => re_rule, :first_rule => re_rule == @re_pipeline.re_rules[0], :last_rule => re_rule == @re_pipeline.re_rules[-1] %>
      <div class="clear"></div>
    <% end %>

    <div class="clear top-5"></div>
    <%= render '/re_pipeline_rules/empty', :re_pipeline => @re_pipeline %>    
  </div>  
</div>  
<div class="span-7 last">      
	<div class="top-5"></div>
	
	<h4 class="re-job-list">
		<%= link_to("Pipeline Job Audit", re_pipeline_re_jobs_path(@re_pipeline)) %>
	</h4>
	
  <%= render '/re_jobs/empty', :hide => true %>
	
	<div id="re_job_list_pending" class="re-infobox">
		<h4 class="left-20">Updating Job List</h4>
		<a id="re_job_list_pipeline" href="#<%= @re_pipeline.id %>"></a>
	</div>	

	<div id="re_job_list">
	</div>
	
	<div class="clear"></div>    

</div>

<div class="clear"></div>
