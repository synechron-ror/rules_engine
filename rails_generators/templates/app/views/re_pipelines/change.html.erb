<% set_re_javascript_include 're_pipeline_change' %>
<% set_re_breadcrumbs link_to("All Pipelines", re_pipelines_path, :class => "re-pipeline-list"), 
											link_to("View Pipeline", re_pipeline_path(@re_pipeline), :class => "re-pipeline-show"),
											'<span class="re-pipeline-change">Edit Pipeline</span>' %>

<div class="prepend-1 span-16 border" id="re_pipeline_change">      
  <%= render :partial => 'change' %>    
</div>
<div class="span-7 last" id="re_pipeline_change_actions">      
  <%= render :partial => 'change_actions' %>
</div>
<div class="clear"></div>

<hr/>

<div class="prepend-1 span-16 border">      
  <div class="re-infobox">
    
    <div class="clear top-5"></div>
    <div id="re_rules_change">      
      <% @re_pipeline.re_rules.each do |re_rule | %>
        <%= render '/re_pipeline_rules/change', :re_rule => re_rule, :first_rule => re_rule == @re_pipeline.re_rules[0], :last_rule => re_rule == @re_pipeline.re_rules[-1] %>
        <div class="clear"></div>
      <% end %>
    </div>    

    <div class="clear top-5"></div>
    <%= render '/re_pipeline_rules/empty', :re_pipeline => @re_pipeline %>    
  </div>  
</div>  
<div class="span-7 last">      
  <%= render :partial => '/re_pipeline_rules/menu' %>    
</div>  
<div class="clear"></div>

<%= render :partial => 'confirm' %>

