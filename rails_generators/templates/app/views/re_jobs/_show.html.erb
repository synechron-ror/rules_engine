<div class="re-job-show span-18">

		<div class="float-left">
			<h4>
				<span class="blue">Job Id :</span> <%= @re_job.id %>
			</h4>	
		</div>	
		<div class="float-right">
			<h4>
				<span class="blue">Created :</span> <%= @re_job.created_at.strftime('%d %b %Y - %H:%M:%S') %>
			</h4>
		</div>	
	<div class="clear"></div>
	<table width="100%" border="0" cellpadding="0" cellspacing="0" class="data" id="re_job_audit_table">
	   <% @re_job_audits.each do | re_job_audit | %>
	     <tr class="<%= cycle('', 'odd') %>">
	       <td width="150px">
	<%  
					if re_job_audit.audit_success
						job_class = 're-job-success'
					else
						job_class = 're-job-error'
					end
	%>
					<div class="<%= job_class %>">
						<%= re_job_audit.audit_date.strftime('%H:%M:%S') %>
					</div>	
				</td>
				<td class="no-border-right">
					<%= re_job_audit.audit_data%>
				</td>
				<td class="text-right no-border-left">
					<div class="right-5">
						<% if re_job_audit.re_pipeline && re_job_audit.audit_code == ReJobAudit::AUDIT_PIPELINE_START %>
							<%= link_to(re_job_audit.re_pipeline.code, re_pipeline_path(re_job_audit.re_pipeline_id), :class => "re-job-goto") %>
						<% end %>	
					</div>	
				</td>	
	     </tr>
	   <% end %>
	</table>
	<%= re_button_link_red('Close', re_jobs_path, :id => "re_jobs_close") %>
</div>    
